printf "RUN distrobox-list\n"
trap 'rm -rf /tmp/test/' EXIT

set -o nounset

mkdir -p /tmp/test
cd "$(dirname "${0}")/".. || exit
./install -P /tmp/test 2> /dev/null
export PATH="/tmp/test:${PATH}"
cd "$(dirname "${0}")/" || exit

printf "distrobox-list: Test version flag... "
out="$(/tmp/test/bin/distrobox-list --version)"
if echo "${out}" | grep -qE "distrobox: [0-9]+\.[0-9\+\.[0-9]+"; then
	printf "PASS\n"
else
	printf "FAIL\n"
	exit 1
fi

printf "distrobox-list: Test command with unknown flag... "
out="$(/tmp/test/bin/distrobox-list --unknownflag 2>&1)"
if [ "${?}" -eq 1 ]; then
	if echo "${out}" | grep -qE "ERROR: Invalid flag '--unknownflag'"; then
		printf "PASS\n"
	else
		printf "FAIL\n"
		exit 1
	fi
else
	printf "FAIL\n"
	exit 1
fi
